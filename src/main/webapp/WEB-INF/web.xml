<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- add servlet -->
    <servlet>
        <servlet-name>AddContactServlet</servlet-name>
        <servlet-class>by.itstep.phonebook.view.servlets.AddContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddContactServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>
    <!-- list servlet -->
    <servlet>
        <servlet-name>ListContacts</servlet-name>
        <servlet-class>by.itstep.phonebook.view.servlets.ListContacts</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListContacts</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

</web-app>